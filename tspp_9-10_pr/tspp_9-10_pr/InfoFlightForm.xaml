<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Name="InfoFlightForm1" mc:Ignorable="d" x:Class="tspp_9_10_pr.InfoFlightForm"
        Title="Інформація про рейси" SizeToContent="WidthAndHeight" d:DesignWidth="289" d:DesignHeight="189">
    <Grid>
        <Menu HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="281" Background="{x:Null}">
            <MenuItem Background="{x:Null}" Header="Файл">
                <MenuItem Name="LoadDataMenuItem" Header="Завантажити"/>
                <MenuItem Name="SaveDataMenuItem" Header="Зберегти"/>
            </MenuItem>
            <MenuItem Header="Рейси">
                <MenuItem Name="EditDataMenuItem" Header="Редагувати"/>
                <MenuItem Name="AddDataMenuItem" Header="Додати"/>
            </MenuItem>
            <MenuItem Header="Пошук">
                <MenuItem Name="SelectXMenuItem" Header="За містом призначення"/>
                <MenuItem Name="SelectXYMenuItem" Header="За часом вильоту"/>
            </MenuItem>
        </Menu>
        <DataGrid x:Name="FlightListDG" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" Background="{x:Null}" Width="261" AutoGenerateColumns="False"/>
    </Grid>
</Window>
